{
  "extends": [
    "taro/react"
  ],
  "rules": {
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
    "jsx-quotes": "off",
    "import/no-commonjs": "off",
    "semi": [2, "always"],
    "quotes": [1, "single"],
    "no-undef": "error"
  },
  // 给eslint定义的一些全局变量
  "globals": {
    "definePageConfig": "readonly",
    "defineAppConfig": "readonly",
    "VERSION": "readonly",
    "wx": "readonly"
  }
}
